(define-system Cnt 
    :input ((in (_ BitVec 8)))
    :output ((out (_ BitVec 8)))
    :init (= out #b00000001)
    :trans (= out' (bvadd out (bvsmod in (let ((x #b00000001) (y (bvadd #b00000001 #b00000001))) (bvadd x y)))))
)

(check-system Cnt
    :input ((i (_ BitVec 8)))
    :output ((o (_ BitVec 8)))
    :assumption (a (= i #b00000010))
    :reachable (rch (= o #b00001010))
    :query (q (rch))
)