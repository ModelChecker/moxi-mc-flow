(define-system Cnt 
    :input ((in (_ BitVec 64)))
    :output ((out (_ BitVec 64)))
    :init (= out 1)
    :trans (= out' 
              (bvadd out 
                     (bvsmod in 3)))
)

(check-system Cnt
    :input ((i (_ BitVec 64)))
    :output ((o (_ BitVec 64)))
    :assumption (a (= i 2))
    :reachable (rch (= o 10))
    :query (q (rch))
)

