{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "declare-sort.json",
    "title": "Declare Sort",
    "description": "A sort declaration in MoXI",
    "type": "object",
    "properties": {
        "command": {
            "const": "declare-sort"
        },
        "symbol": {
            "description": "symbol of `declare-sort` object",
            "type": "string"
        },
        "arity": {
            "description": "Arity of `declare-sort` object",
            "type": "integer",
            "minimum": 0
        }
    },
    "required": [ "command", "symbol", "arity" ],
    "additionalProperties": false
}